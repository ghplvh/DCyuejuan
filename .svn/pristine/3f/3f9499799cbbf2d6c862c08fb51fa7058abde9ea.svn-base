.question-card {
  margin-bottom: 10px;

  .el-card__body {
    padding: 0px;
  }

  .card-center {
    padding: 20px 25px 15px;
  }

  .card-footer {
    width: 100%;
    border-top: 1px solid #e2e6ed;
    padding: 8px 25px;
    line-height: 28px;
    font-size: 12px;
    color: #83878d;
    letter-spacing: .03px;

    .el-col {
      &:last-child {
        text-align: right;
      }
    }

    .el-button {
      font-size: 13px;
    }

    .el-button--mini {
      padding: 8px;
      font-size: 12px;
    }

    .el-button--primary {
      background-color: #1daef8;
      border-color: #1daef8;
    }

    .el-button--text {
      color: #83878d;

      &:hover {
        color: #1daef8;
      }
    }

    .footer-split {
      color: #e2e6ed;
      margin: 0 5px;
    }
    .pop-reference{
      max-width: 600px;
      overflow: hidden;
      white-space: nowrap;
      text-overflow: ellipsis;
    }
  }
}

.el-pagination {
  text-align: center;
}